<% provide(:title, @title) %>
<div class="row">
  <aside class="col-sm-5 col-md-4 col-lg-3">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to 'view my profile', @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
          <div class="user_avatars">
            <% @users.each do |user| %>
                <%= link_to gravatar_for(user, size: 30), user %>
            <% end %>
          </div>
      <% end %>
    </section>
  </aside>

  <div class="col-sm-12 col-md-8 col-lg-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
        <ul class="users">
          <%= render @users, list_mode: true %>
        </ul>
        <%= will_paginate %>
    <% end %>
  </div>
</div>